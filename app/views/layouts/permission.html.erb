<!DOCTYPE html>
<html>
  <head>
    <%= stylesheet_link_tag "application", :media => "all" %>
    <%= javascript_include_tag "jquery" %>
  </head>
  <body class="<%= controller_name %> <%= action_name %>">

    <%= yield %>

    <script type="text/javascript">
      $(function(){

        $(".ajaxDeleteLink").on("click", function (event) {
          event.preventDefault();
          $.post(event.target, "_method=DELETE", function (data) {
            writeAjaxHolder(data);
          }, "html");
        });

        $(".ajaxLink").on("click", function (event) {
          event.preventDefault();
          fillAjaxHolder(event.target);
          return false;
        });

        $(".ajaxSubmit").on("click", function (event) {
          event.preventDefault();
          submitFormPost(event.target.form, function (data) {
            writeAjaxHolder(data);
          });
        });
      });
    </script>
  </body>
</html>