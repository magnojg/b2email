<div id="masthead">
  <div class="container-fluid">
    <div class="masthead-pad">
      <div class="masthead-text">
        <h2><%=t 'models.' + controller_name %></h2>
        <p><%= breadcrumbs(" &raquo; ") %> &raquo; <strong><%=t action_name %></strong></p>
      </div>
    </div>
  </div>
</div>
<section id="content">
  <div class="container-fluid">
    <div class="row-fluid">
      <div class="span12">
        <div class="buttons">
          <%= link_to polymorphic_path(object.class), :class => 'btn' do %>
            <i class="icon-circle-arrow-left"></i>Voltar Ã  listagem
          <% end %>
          <% if local_assigns.has_key?(:class_name) && can?(:create, class_name) %>
            <%= link_to new_polymorphic_path(class_name), :class => 'btn btn-primary' do %>
              <i class="icon-plus-sign icon-white"></i>Adicionar
            <% end %>
          <% end %>
        </div>
        <div class="list-view">

          <%= content_for :show %>

          <div class="form-actions">
            <% options = {} unless local_assigns.has_key?(:options) %>
            <%= actions_to_view_show(object, options) %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
