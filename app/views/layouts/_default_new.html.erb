<div id="masthead">
  <div class="container-fluid">
    <div class="masthead-pad">
      <div class="masthead-text">
        <h2><%=t 'models.' + controller_name %></h2>
        <p><%= breadcrumbs(" &raquo; ") %> &raquo; <strong><%=t action_name %></strong></p>
      </div>
    </div>
  </div>
</div>

<section id="content">
  <div class="container-fluid">
    <div class="row-fluid">
      <div class="span12">

        <div class="buttons">
          <%= link_to polymorphic_path(object), :class => 'btn' do %>
          <i class="icon-circle-arrow-left"></i>Voltar Ã  listagem
          <% end %>
        </div>


        <% if object.errors.any? %>
        <div class="alert alert-error alert-block" style="" >
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <h4><%= pluralize(object.errors.count, "erro") %> ocorreram, favor verificar:</h4>
          <ul class="list-reset">
            <% object.errors.full_messages.each do |msg| %>
              <li>- <%= msg %></li>
            <% end %>
          </ul>
        </div>
        <% end %>

        <%= form_for object, url: polymorphic_path(object), :html => { :class => 'form-horizontal' } do |f| %>

          <%= render :partial => 'form', locals: { f: f } %>

          <div class="form-actions">
            <%= f.submit "Salvar", :class => 'btn btn-primary' do %>
              <icon class="icon-ok"></icon>
            <% end %>
            <%= link_to "Cancelar", polymorphic_path(object), :class => 'btn' %>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</section>
