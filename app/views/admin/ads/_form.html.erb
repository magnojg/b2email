<%= simple_form_for @admin_ad, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :image_file_name %>
  <%= f.input :image_content_type %>
  <%= f.input :image_file_size %>
  <%= f.input :image_updated_at %>
  <%= f.input :title %>
  <%= f.input :subtitle %>
  <%= f.input :url %>
  <%= f.input :admin_ad_bar_id %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                admin_ads_path, :class => 'btn btn-default' %>
<% end %>
