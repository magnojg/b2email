<%- model_class = Admin::Company -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @admin_company.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:trading_name) %>:</strong></dt>
  <dd><%= @admin_company.trading_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:registration_number) %>:</strong></dt>
  <dd><%= @admin_company.registration_number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address) %>:</strong></dt>
  <dd><%= @admin_company.address %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              admin_companies_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_admin_company_path(@admin_company), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              admin_company_path(@admin_company),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
