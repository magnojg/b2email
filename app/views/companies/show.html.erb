<%- model_class = Company -%>
<% content_for :show do %>
    <dl class="control-group">
        <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
        <dd><%= @company.name %></dd>
    </dl>
    <dl class="control-group">
        <dt><strong><%= model_class.human_attribute_name(:trading_name) %>:</strong></dt>
        <dd><%= @company.trading_name %></dd>
    </dl>
    <dl class="control-group">
        <dt><strong><%= model_class.human_attribute_name(:registration_number) %>:</strong></dt>
        <dd><%= @company.registration_number %></dd>
    </dl>
    <dl class="control-group">
        <dt><strong><%= model_class.human_attribute_name(:registration_number) %>:</strong></dt>
        <dd><%= image_tag @company.logo_image.url %><%= "(#{@company.logo_dimensions})" unless @company.logo_dimensions.blank? %></dd>
    </dl>
    <dl class="control-group">
        <dt><strong><%= model_class.human_attribute_name(:address) %>:</strong></dt>
        <dd><%= @company.address %></dd>
    </dl>
<% end %>

<%= render :partial => 'layouts/default_show', :locals  => { :object => @company } -%>
