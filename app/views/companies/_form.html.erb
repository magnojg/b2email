<div class="form-fields">
  <div class="control-group">
    <%= f.label :name, :class => "control-label required" %>
    <div class="controls">
      <%= f.text_field :name %>
      <%= errors_for(@company, :name) %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :trading_name, :class => "control-label required" %>
    <div class="controls">
      <%= f.text_field :trading_name %>
      <%= errors_for(@company, :trading_name) %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :registration_number, :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :registration_number, :class => "text_field span4" %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :domain_url, :class => "control-label" %>
    <div class="controls">
      <%= f.url_field :domain_url, :class => "text_field span6 required" %>
      <%= errors_for(@company, :domain_url) %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :logo_image, :class => "control-label" %>
    <div class="controls">
      <%= f.file_field :logo_image, placeholder: true, class: 'file_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :address, :class => "control-label" %>
    <div class="controls">
      <%= f.text_area :address, :class => "text_area span4", :rows => "8" %>
    </div>
  </div>
</div>

<% content_for :scripts do %>
  <%= javascript_include_tag "plugins/validate/jquery.validate", "plugins/validate/jquery.validate.pt-br" %>
<% end %>
