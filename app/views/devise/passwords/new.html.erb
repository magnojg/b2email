
<div class="account-container login stacked">
    <div class="content clearfix">
		<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  			<%= devise_error_messages! %>

            <h1>Esqueceu sua senha?</h1>    
            <div class="login-fields">

                <p>Informe seus dados cadastrados:</p>

                <div class="field">
                    <%= f.label :email %>
                    <%= f.email_field :email, :class => 'login username-field', :placeholder => 'E-mail' %>
                </div> <!-- end .field -->
            </div> <!-- end .login-fields -->

            <div class="login-actions">

                <%= f.submit "Enviar informações para redefinir senha", :class => 'button btn btn-primary btn-large' %>

            </div> <!-- end .actions -->
        <% end %>

    </div><!-- end .content -->
</div><!-- end .account-container -->