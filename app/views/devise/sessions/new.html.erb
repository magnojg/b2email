
<div class="account-container login stacked">
    <div class="content clearfix">
        <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

            <h1>Login</h1>    
            <div class="login-fields">

                <p>Entre usando seus dados cadastrados:</p>

                <div class="field">
                    <%= f.label :email %>
                    <%= f.email_field :email, :class => 'login username-field', :placeholder => 'E-mail' %>
                </div> <!-- end .field -->
                <div class="field">
                    <%= f.label :password %>
                    <%= f.password_field :password, :class => 'login password-field', :placeholder => 'Senha' %>
                </div> <!-- end .password -->
            </div> <!-- end .login-fields -->

            <div class="login-actions">
                <span class="login-checkbox">
                    <% if devise_mapping.rememberable? -%>
                        <%= f.check_box :remember_me, :class => "field login-checkbox" %> <%= f.label :remember_me, :class => "choice" %>
                    <% end -%>
                </span>
                <%= link_to "Esqueci minha senha", new_password_path(resource_name), :style => 'float: left; margin-left: -90px' %>

                <%= f.submit "Entrar", :class => 'button btn btn-primary btn-large' %>                 

            </div> <!-- end .actions -->
        <% end %>

    </div><!-- end .content -->
</div><!-- end .account-container -->