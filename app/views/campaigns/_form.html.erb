<%= simple_form_for @campaign, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :title %>

  <div class="form-group datetime optional campaign_start_at">
    <label class="datetime optional control-label" for="campaign_start_at">Start at</label>
    <div class="form-inline">
      <div class="input-group">
				<input type="text" name="campaign[start_at]" class="form-control date-picker">
				<span class="input-group-btn calendar-span">
					<button type="button" class="btn btn-default"><i class="fa fa-calendar"></i></button>
				</span>
			</div>
    </div>
  </div>

  <div class="form-group datetime optional campaign_start_at">
    <label class="datetime optional control-label" for="campaign_end_at">End at</label>
    <div class="form-inline">
      <div class="input-group">
				<input type="text" name="campaign[end_at]" class="form-control date-picker">
				<span class="input-group-btn calendar-span">
					<button type="button" class="btn btn-default"><i class="fa fa-calendar"></i></button>
				</span>
			</div>
    </div>
  </div>

  <div class="form-group integer optional campaign_company_id">
    <label class="integer optional control-label" for="campaign_company_id">Company</label>
    <%= select_tag("campaign[company_id]", options_for_select(@companies, :selected => params[:company_id]), {  class: 'form-control' }) %>
  </div>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                campaigns_path, :class => 'btn btn-default' %>
<% end %>
